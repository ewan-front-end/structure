// 弹性盒子
.box-flex {
    display: flex;
    .box-flex-item {
        flex-shrink: 0;
        flex-basis: 1%;
    }
    .flex-1 {
        flex-grow: 1;
    }
    .flex-2 {
        flex-grow: 2;
    }
    .flex-3 {
        flex-grow: 3;
    }
}