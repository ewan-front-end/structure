// 弹性盒子
.box-flex {
    display: flex;

    .box-flex-item {
        flex-shrink: 0;
        flex-basis: 1%;
    }

    .flex-1 {
        flex-grow: 1;
    }

    .flex-2 {
        flex-grow: 2;
    }

    .flex-3 {
        flex-grow: 3;
    }
}

.anchor {
    display: inline-block;
    text-decoration: none !important;
    line-height: 16px;
    font-size: 14px;
    font-weight: bold;

    .img {
        display: inline-block;
        width: 16px;
        text-align: center;
        vertical-align: middle;
        line-height: 16px;
        cursor: pointer;
        margin-right: 3px;
        backface-visibility: hidden;
        background-color: #3eaf7c;
        border-radius: 15px;
        
        img {
            line-height: 100%;
            vertical-align: middle;
        }
    }
    &.anchor1 {
        line-height: 20px;
        font-size: 18px;
        .img {line-height: 20px;}
    }
    &.anchor2 {
        line-height: 24px;
        font-size: 22px;
        .img {line-height: 24px;}
    }
    &.anchor3 {
        line-height: 28px;
        font-size: 26px;
        .img {line-height: 28px;}
    }
    &.anchor4 {
        line-height: 30px;
        font-size: 30px;
        .img {line-height: 30px;}
    }
    &.anchor5 {
        line-height: 34px;
        font-size: 34px;
        .img {line-height: 34px;}
    }
    &.anchor6 {
        line-height: 38px;
        font-size: 38px;
        .img {width: 22px; line-height: 38px;}
    }
    &.anchor7 {
        line-height: 42px;
        font-size: 42px;
        .img {width: 24px;line-height: 42px;}
    }
    &.anchor8 {
        line-height: 46px;
        font-size: 46px;
        .img {width: 26px;line-height: 46px;}
    }
    &.anchor9 {
        line-height: 50px;
        font-size: 50px;
        .img {width: 28px; line-height: 50px;}
    }

    span {
        vertical-align: middle;

        &:nth-of-type(2) {
            display: none;
        }
    }

    &:hover {
        span:nth-of-type(1) {
            display: none;
        }

        span:nth-of-type(2) {
            display: inline-block;
        }
    }    
}

.tree {
    .title {
        display: inline-block;
        padding-right: 20px;
        position: relative;
    }

    .switch {
        &:after {
            content: '+';
            position: absolute;
            top: 0;
            right: 0;
            width: 14px;
            text-align: center;
            background-color: #ccc;
            cursor: pointer;
        }

        &.active:after {
            content: '-';
        }
    }

    .tree-children-container {
        height: 0;
        overflow: hidden;

        &.active {
            height: auto;
            overflow: visible;
        }
    }
}

// 外观盒子
.box {
    display: inline-block;
    background-color: #fbf8cc;
    border: #e9e6b3 2px solid;
    padding: 2px 5px;
}

.observe-feilds {
    position: relative;

    .feilds-container {
        position: absolute;
        top: 0;
        right: 0;
        font-size: 12px;
        text-align: right;

        .list {
            position: relative;

            input {
                border: 0;
                outline: none;
                border-bottom: #eee 1px solid;
            }

            &:after {
                content: '';
                font-size: 0;
                border-width: 3px;
                border-color: transparent #ddd #ddd transparent;
                border-style: solid;
                position: absolute;
                bottom: 2px;
                right: 0;
            }
        }
    }
}

.format-note {
    color: #fb0;
    font-size: 12px;

    &:before {
        content: 'NOTE';
        display: inline-block;
        background-color: #ffdf66;
        color: #fff;
        line-height: 14px;
        padding: 0 2px;
        margin-right: 4px;
        border-radius: 3px;
        letter-spacing: 0px;
    }
}
.format-url {
    color: #ddd;
    &:before {
        content: 'URL';
        background-color: #ddd;
        color: #fff;
        padding: 0 4px 0 10px;
        border-radius: 8px 0 0 8px;
        line-height: 14px;
    }
    i{
        border: #ddd 1px solid;
        line-height: 12px;
        padding: 0 10px 0 7px;
        border-radius: 0 8px 8px 0;
        display: inline-block;
    }
}

.format-npm, .format-project, .format-git {
    line-height: 14px;
    font-size: 12px;
    letter-spacing: 0px;
    &:before{
        padding: 0 2px;
        color: #fff;
    }
    i{
        font-style: normal;
        padding: 0 3px;
        display: inline-block;
    }
}
.format-project {
    &:before {
        content: 'PROJECT';
        background-color: #a5b3dd;
    }
    i{
        border: #a5b3dd 1px solid;
        background-color: #fff;
        color:#a5b3dd;
        line-height: 12px;
    }
}
.format-npm{
    color: #fff;
    &:before {
        content: 'NPM';
        background-color: #e79595;
        padding: 0 7px;
    }
    i{
        background-color: #f6b8b8;
    }
}
.format-git{
    color: #fff;
    &:before {
        content: 'GIT';
        background-color: #73c8cb;
        padding: 0 7px;
    }
    a{
        border: #73c8cb 1px solid;
        background-color: #fff;
        color:#73c8cb;
        line-height: 12px;
        display: inline-block;
        padding: 0 3px;
    }
}
